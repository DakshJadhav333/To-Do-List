{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-xl shadow">

    <h2 class="text-2xl font-bold mb-6">
        Login
    </h2>

    {% if error %}
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}" class="space-y-5">

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Email
            </label>
            <input
                type="email"
                name="email"
                value="{{ last_username }}"
                required
                autofocus
                class="w-full px-4 py-2 border border-gray-300 rounded-lg
                       focus:ring-indigo-500 focus:border-indigo-500"
            >
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
                Password
            </label>
            <input
                type="password"
                name="password"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg
                       focus:ring-indigo-500 focus:border-indigo-500"
            >
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        <button class="mt-4 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow">
            Login
        </button>
    </form>

    <p class="mt-4 text-sm text-gray-600">
        Donâ€™t have an account?
        <a href="{{ path('app_register') }}" class="text-indigo-600 hover:underline">
            Register
        </a>
    </p>

</div>
{% endblock %}
