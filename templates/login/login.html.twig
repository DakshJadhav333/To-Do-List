{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-xl shadow">

    <h2 class="text-2xl font-bold mb-6">Login</h2>

    {# ✅ Show error message (if login fails) #}
    {% if error %}
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {# ✅ If already logged in #}
    {% if app.user %}
        <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4">
            You are logged in as <b>{{ app.user.userIdentifier }}</b>.
        </div>

        <div class="flex gap-3">
            <a href="{{ path('task_index') }}"
               class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow">
                Go to Tasks
            </a>

            <a href="{{ path('app_logout') }}"
               class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg shadow">
                Logout
            </a>
        </div>
    {% else %}

        {# ✅ Symfony Session Login Form #}
        <form method="post" class="space-y-5">

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Email
                </label>
                <input
                    type="email"
                    name="email"
                    value="{{ last_username }}"
                    required
                    autofocus
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg
                           focus:ring-indigo-500 focus:border-indigo-500"
                >
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    Password
                </label>
                <input
                    type="password"
                    name="password"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg
                           focus:ring-indigo-500 focus:border-indigo-500"
                >
            </div>

            {# ✅ CSRF token required for form_login #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button
                type="submit"
                class="mt-4 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow">
                Login
            </button>
        </form>

        <p class="mt-4 text-sm text-gray-600">
            Don’t have an account?
            <a href="{{ path('app_register') }}" class="text-indigo-600 hover:underline">
                Register
            </a>
        </p>

    {% endif %}
</div>
{% endblock %}