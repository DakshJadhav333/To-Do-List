{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-xl shadow">

    <h2 class="text-2xl font-bold mb-6">
        Register
    </h2>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm, { attr: { class: 'space-y-5' } }) }}

    <!-- Email -->
    <div>
        {{ form_label(registrationForm.email, null, {
            label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }
        }) }}

        {{ form_widget(registrationForm.email, {
            attr: {
                class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500'
            }
        }) }}

        {{ form_errors(registrationForm.email) }}
    </div>

    <!-- Password -->
    <div>
        {{ form_label(registrationForm.Password, null, {
            label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }
        }) }}

        {{ form_widget(registrationForm.Password, {
            attr: {
                class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500'
            }
        }) }}

        {{ form_errors(registrationForm.Password) }}
    </div>

    <button class="mt-4 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow">
        Register
    </button>

    {{ form_end(registrationForm) }}

    <p class="mt-4 text-sm text-gray-600">
        Already have an account?
        <a href="{{ path('app_login') }}" class="text-indigo-600 hover:underline">
            Login
        </a>
    </p>
</div>
{% endblock %}
