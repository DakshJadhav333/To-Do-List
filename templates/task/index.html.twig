{% extends 'base.html.twig' %}

{% block title %}My Tasks{% endblock %}

{% block body %}

<!-- PAGE BACKGROUND -->
<div class="bg-secondary bg-opacity-10 py-5">

    <div class="container">

        <!-- MAIN CONTENT WRAPPER -->
        <div class="bg-white rounded shadow p-4">

            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">My Tasks</h2>
                    <p class="text-muted mb-0">Stay organized and productive</p>
                </div>

                <div class="d-flex gap-2">
                    <form method="get" action="{{ path('task_index') }}" class="d-flex">
                        <input
                            type="text"
                            name="q"
                            value="{{ search }}"
                            class="form-control"
                            placeholder="Search tasks..."
                        >
                        <button class="btn btn-outline-primary ms-2">
                            Search
                        </button>
                    </form>

                    {% if app.user %}
                        <a href="{{ path('task_new') }}" class="btn btn-primary">
                            New Task
                        </a>

                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                            Logout
                        </a>
                    {% endif %}
                </div>
            </div>

            <!-- TASK LIST -->
            <div class="card mb-4">
                <ul class="list-group list-group-flush">

                    {% for task in tasks %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">

                            <div class="d-flex align-items-center gap-3">

                                <form method="post" action="{{ path('task_toggle', {id: task.id}) }}">
                                    <button class="btn btn-sm
                                        {% if task.completed %}
                                            btn-success
                                        {% else %}
                                            btn-outline-secondary
                                        {% endif %}
                                    ">
                                        âœ“
                                    </button>
                                </form>

                                <span class="{% if task.completed %}text-decoration-line-through text-muted{% endif %}">
                                    {{ task.title }}
                                </span>

                                <span class="badge
                                    {% if task.priority == 'HIGH' %}
                                        bg-danger
                                    {% elseif task.priority == 'MEDIUM' %}
                                        bg-warning text-dark
                                    {% else %}
                                        bg-success
                                    {% endif %}
                                ">
                                    {{ task.priority }}
                                </span>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="{{ path('task_edit', {id: task.id}) }}"
                                   class="btn btn-sm btn-outline-primary">
                                    Edit
                                </a>

                                <form method="post"
                                      action="{{ path('task_delete', {id: task.id}) }}"
                                      onsubmit="return confirm('Delete this task?');">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ task.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item text-center text-muted py-4">
                            No tasks found
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- STATS -->
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p class="text-muted mb-1">Total</p>
                            <h4 class="fw-bold">{{ total }}</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p class="text-muted mb-1">Completed</p>
                            <h4 class="fw-bold text-success">{{ completed }}</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p class="text-muted mb-1">Remaining</p>
                            <h4 class="fw-bold text-warning">{{ total - completed }}</h4>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}
