{% extends 'base.html.twig' %}

{% block title %}My Tasks{% endblock %}

{% block body %}

<!-- PAGE BACKGROUND -->
<div class="bg-light py-5">

    <div class="container">

        <!-- MAIN CONTENT WRAPPER -->
        <div class="inner-wrapper rounded-4 shadow-sm p-4">


            <!-- HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">

                <!-- Title -->
                <div>
                    <h2 class="fw-bold mb-1">My Tasks</h2>
                    <p class="text-muted mb-0">Stay organized and productive</p>
                </div>

                <!-- Right Side -->
                <div class="d-flex align-items-center gap-2 flex-wrap">

                    <!-- Logged in user -->
                    {% if app.user %}
                        <div class="px-3 py-2 rounded-pill bg-primary bg-opacity-10 text-primary fw-semibold small">
                            üë§ {{ app.user.userIdentifier }}
                        </div>
                    {% endif %}

                    <!-- Search -->
                    <form method="get" action="{{ path('task_index') }}" class="d-flex">
                        <input
                            type="text"
                            name="q"
                            value="{{ search }}"
                            class="form-control rounded-pill"
                            placeholder="Search tasks..."
                        >
                        <button class="btn btn-outline-primary rounded-pill ms-2">
                            üîç
                        </button>
                    </form>

                    {% if app.user %}
                        <a href="{{ path('task_new') }}" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            + New Task
                        </a>

                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger rounded-pill px-4">
                            Logout
                        </a>
                    {% endif %}
                </div>
            </div>

            <!-- TASK LIST -->
            <div class="card border-0 shadow-sm mb-4">
                <ul class="list-group list-group-flush">

                    {% for task in tasks %}
                        <li class="list-group-item d-flex justify-content-between align-items-center
                                   task-row">

                            <!-- Left -->
                            <div class="d-flex align-items-center gap-3">

                                <form method="post" action="{{ path('task_toggle', {id: task.id}) }}">
                                    <button class="btn btn-sm rounded-circle
                                        {% if task.completed %}
                                            btn-success
                                        {% else %}
                                            btn-outline-secondary
                                        {% endif %}
                                    ">
                                        ‚úì
                                    </button>
                                </form>

                                <span class="fw-semibold
                                    {% if task.completed %}
                                        text-decoration-line-through text-muted
                                    {% endif %}
                                ">
                                    {{ task.title }}
                                </span>

                                <span class="badge rounded-pill
                                    {% if task.priority == 'HIGH' %}
                                        bg-danger
                                    {% elseif task.priority == 'MEDIUM' %}
                                        bg-warning text-dark
                                    {% else %}
                                        bg-success
                                    {% endif %}
                                ">
                                    {{ task.priority }}
                                </span>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex gap-2">
                                <a href="{{ path('task_edit', {id: task.id}) }}"
                                   class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    ‚úèÔ∏è Edit
                                </a>

                                <form method="post"
                                      action="{{ path('task_delete', {id: task.id}) }}"
                                      onsubmit="return confirm('Delete this task?');">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ task.id) }}">
                                    <button class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        üóëÔ∏è Delete
                                    </button>
                                </form>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item text-center text-muted py-4">
                            No tasks found
                        </li>
                    {% endfor %}
                </ul>
            </div>

    {% if totalPages > 1 %}
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Previous -->
            <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
                <a class="page-link"
                href="{{ path('task_index', {
                    page: currentPage - 1,
                    q: search
                }) }}">
                    Previous
                </a>
            </li>

            <!-- Page Numbers -->
            {% for page in 1..totalPages %}
                <li class="page-item {{ page == currentPage ? 'active' }}">
                    <a class="page-link"
                    href="{{ path('task_index', {
                        page: page,
                        q: search
                    }) }}">
                        {{ page }}
                    </a>
                </li>
            {% endfor %}

            <!-- Next -->
            <li class="page-item {{ currentPage == totalPages ? 'disabled' }}">
                <a class="page-link"
                href="{{ path('task_index', {
                    page: currentPage + 1,
                    q: search
                }) }}">
                    Next
                </a>
            </li>

        </ul>
    </nav>
    {% endif %}


            <!-- STATS -->
            <div class="row text-center g-3">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-body">
                            <p class="text-muted mb-1">Total</p>
                            <h4 class="fw-bold">{{ total }}</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-body">
                            <p class="text-muted mb-1">Completed</p>
                            <h4 class="fw-bold text-success">{{ completed }}</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-body">
                            <p class="text-muted mb-1">Remaining</p>
                            <h4 class="fw-bold text-warning">{{ total - completed }}</h4>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- HOVER EFFECT -->
<style>
/* Inner dashboard background (darker grey) */
.inner-wrapper {
    background: #e2e8f0; /* darker grey-blue */
}

/* Task row hover effect */
.task-row {
    transition: background-color 0.2s ease, transform 0.15s ease;
}

.task-row:hover {
    background-color: #e0e7ff;
    transform: scale(1.01);
}


</style>

{% endblock %}