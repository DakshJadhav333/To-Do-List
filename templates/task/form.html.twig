{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-xl mx-auto mt-12">
  <div class="bg-white p-8 rounded-xl shadow">
    <h2 class="text-2xl font-bold mb-6">{{ title }}</h2>

    {{ form_start(form, { attr: { class: 'space-y-5' } }) }}

    <!-- Title -->
    <div>
      {{ form_label(form.title, null, {
        label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-1' }
      }) }}

      {{ form_widget(form.title, {
        attr: {
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none'
        }
      }) }}

      {{ form_errors(form.title) }}
    </div>

    <!-- Priority -->
    <div>
      {{ form_label(form.priority, null, {
        label_attr: { class: 'block text-sm font-semibold text-gray-700 mb-1' }
      }) }}

      {{ form_widget(form.priority, {
        attr: {
          class: 'w-full px-4 py-2 border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-indigo-500 focus:outline-none'
        }
      }) }}

      {{ form_errors(form.priority) }}
    </div>

    <!-- Completed -->
    <div class="flex items-center gap-2">
    {{ form_widget(form.completed, {
        attr: { class: 'w-4 h-4 text-indigo-600 rounded' }
    }) }}

    {{ form_label(form.completed, null, {
        label_attr: { class: 'text-sm text-gray-700' }
    }) }}
    </div>


    <!-- Submit -->
    <button class="mt-4 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg shadow">
      Save
    </button>

    {{ form_end(form) }}
  </div>
</div>
{% endblock %} 

